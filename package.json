{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"nodemon src/server.js\" \"npm:dev:css\"",
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./assets/styles/input.css -o ./public/assets/styles.css",
    "dev:css": "tailwindcss -c tailwind.config.cjs -i ./assets/styles/input.css -o ./public/assets/styles.css --watch"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.1",
    "mongoose": "^8.8.0",
    "express-session": "^1.18.1",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "concurrently": "^9.1.0"
  }
}
