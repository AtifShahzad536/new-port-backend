<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> - <%= appName || 'App' %></title>
    <link rel="stylesheet" href="/public/assets/styles.css" />
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <% if (user) { %>
      <div class="min-h-screen flex">
        <!-- Mobile top bar -->
        <div class="md:hidden fixed top-0 inset-x-0 z-40 bg-white border-b h-14 flex items-center justify-between px-4">
          <button id="menuBtn" class="inline-flex items-center gap-2 px-3 py-2 border rounded-md text-sm">
            <i data-lucide="menu" class="w-5 h-5"></i>
            <span>Menu</span>
          </button>
          <div class="flex items-center gap-2">
            <i data-lucide="layout-dashboard" class="w-5 h-5 text-indigo-600"></i>
            <span class="font-semibold"><%= appName || 'App' %></span>
          </div>
        </div>
        <!-- Mobile sidebar (drawer) -->
        <div id="mobileBackdrop" class="md:hidden fixed inset-0 z-40 bg-black/30 backdrop-blur-sm hidden"></div>
        <aside id="mobileSidebar" class="md:hidden fixed z-50 inset-y-0 left-0 w-64 bg-white border-r border-gray-200 transform -translate-x-full transition-transform duration-200 ease-out flex flex-col overflow-y-auto">
          <div class="h-14 flex items-center justify-between px-4 border-b">
            <div class="flex items-center gap-2">
              <i data-lucide="layout-dashboard" class="w-5 h-5 text-indigo-600"></i>
              <span class="font-semibold"><%= appName || 'App' %></span>
            </div>
            <button id="closeSidebar" class="p-2 rounded-md hover:bg-gray-100">
              <i data-lucide="x" class="w-5 h-5"></i>
            </button>
          </div>
          <nav class="flex-1 p-3 space-y-1">
            <a href="/dashboard" class="nav-link flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="home" class="w-4 h-4"></i>
              <span>Dashboard</span>
            </a>
            <a href="/projects" class="nav-link flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="briefcase" class="w-4 h-4"></i>
              <span>Projects</span>
            </a>
            <a href="/skills" class="nav-link flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="sparkles" class="w-4 h-4"></i>
              <span>Skills</span>
            </a>
            <a href="/tools" class="nav-link flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="hammer" class="w-4 h-4"></i>
              <span>Tools</span>
            </a>
            <a href="/contacts" class="nav-link flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="mail" class="w-4 h-4"></i>
              <span>Contacts</span>
            </a>
            <form method="post" action="/auth/logout" class="pt-2 border-t">
              <button class="w-full text-left flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-red-600" type="submit">
                <i data-lucide="log-out" class="w-4 h-4"></i>
                Logout
              </button>
            </form>
          </nav>
        </aside>
        <aside class="w-64 bg-white border-r border-gray-200 hidden md:flex md:flex-col sticky top-0 h-screen overflow-y-auto">
          <div class="h-14 flex items-center gap-2 px-4 border-b">
            <i data-lucide="layout-dashboard" class="w-5 h-5 text-indigo-600"></i>
            <span class="font-semibold"><%= appName || 'App' %></span>
          </div>
          <nav class="flex-1 p-3 space-y-1">
            <a href="/dashboard" class="flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="home" class="w-4 h-4"></i>
              <span>Dashboard</span>
            </a>
            <a href="/projects" class="flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="briefcase" class="w-4 h-4"></i>
              <span>Projects</span>
            </a>
            <a href="/skills" class="flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="sparkles" class="w-4 h-4"></i>
              <span>Skills</span>
            </a>
            <a href="/tools" class="flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="hammer" class="w-4 h-4"></i>
              <span>Tools</span>
            </a>
            <a href="/contacts" class="flex items-center gap-2 px-3 py-2 rounded-md text-sm hover:bg-gray-100 text-gray-700">
              <i data-lucide="mail" class="w-4 h-4"></i>
              <span>Contacts</span>
            </a>
          </nav>
          <div class="p-3 border-t flex items-center justify-between text-xs text-gray-500">
            <span>&copy; <%= new Date().getFullYear() %></span>
            <form method="post" action="/auth/logout">
              <button class="text-red-600 hover:underline" type="submit">Logout</button>
            </form>
          </div>
        </aside>
        <main class="flex-1 p-4 md:p-6 md:pt-6 pt-16">
          <%- body %>
        </main>
      </div>
    <% } else { %>
      <main>
        <%- body %>
      </main>
    <% } %>
    <script>
      function mountIcons () {
        try { lucide.createIcons(); } catch (e) {}
      }
      mountIcons();

      const menuBtn = document.getElementById('menuBtn');
      const mobileSidebar = document.getElementById('mobileSidebar');
      const mobileBackdrop = document.getElementById('mobileBackdrop');
      const closeSidebar = document.getElementById('closeSidebar');

      function openSidebar() {
        mobileSidebar.classList.remove('-translate-x-full');
        mobileBackdrop.classList.remove('hidden');
      }
      function closeSide() {
        mobileSidebar.classList.add('-translate-x-full');
        mobileBackdrop.classList.add('hidden');
      }
      if (menuBtn) menuBtn.addEventListener('click', () => { openSidebar(); mountIcons(); });
      if (closeSidebar) closeSidebar.addEventListener('click', closeSide);
      if (mobileBackdrop) mobileBackdrop.addEventListener('click', closeSide);
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeSide(); });
      // close on nav click
      document.querySelectorAll('#mobileSidebar .nav-link').forEach(a => a.addEventListener('click', closeSide));
    </script>
  </body>
</html>
