<section class="py-6 max-w-2xl">
  <div class="flex items-center justify-between gap-3">
    <h1 class="text-2xl font-bold flex items-center gap-2">
      <i data-lucide="pencil" class="w-6 h-6 text-indigo-600"></i>
      <%= mode === 'edit' ? 'Edit Project' : 'New Project' %>
    </h1>
    <a href="/projects" class="inline-flex items-center gap-2 border px-3 py-2 rounded-md text-sm hover:bg-gray-50">
      <i data-lucide="arrow-left" class="w-4 h-4"></i>
      Back
    </a>
  </div>

  <div class="mt-6 bg-white border border-gray-200 rounded-xl p-5 shadow-sm">
    <form id="projectForm" class="space-y-4" method="post" enctype="multipart/form-data" action="<%= mode === 'edit' ? '/projects/' + project._id : '/projects' %>">
      <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <label class="block text-sm font-medium text-gray-700">Title</label>
        <input name="title" required class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" value="<%= project.title || '' %>" />
      </div>
      <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <label class="block text-sm font-medium text-gray-700">Description</label>
        <textarea name="description" rows="4" class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"><%= project.description || '' %></textarea>
      </div>
      <div class="grid md:grid-cols-2 gap-4">
        <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
          <label class="block text-sm font-medium text-gray-700">Upload Image</label>
          <input id="imageInput" name="image" type="file" accept="image/*" class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 bg-white" />
          <p class="text-xs text-gray-500 mt-1">PNG, JPG up to 5MB. If no file chosen, existing URL will be used.</p>
        </div>
        <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
          <label class="block text-sm font-medium text-gray-700">Or Image URL</label>
          <input id="imageUrlInput" name="imageUrl" type="url" placeholder="https://..." class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" value="<%= project.imageUrl || '' %>" />
          <div class="mt-2">
            <% if (project.imageUrl) { %>
              <img id="previewImg" src="<%= project.imageUrl %>" alt="preview" class="h-24 w-24 object-cover rounded border" />
            <% } else { %>
              <img id="previewImg" src="" alt="preview" class="hidden h-24 w-24 object-cover rounded border" />
            <% } %>
          </div>
        </div>
      </div>
      <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <label class="block text-sm font-medium text-gray-700">URL</label>
        <input name="url" type="url" class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" value="<%= project.url || '' %>" />
      </div>
      <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <label class="block text-sm font-medium text-gray-700">GitHub URL</label>
        <input name="github" type="url" placeholder="https://github.com/username/repo" class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" value="<%= project.github || '' %>" />
      </div>
      <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <label class="block text-sm font-medium text-gray-700">Key Features</label>
        <textarea name="features" rows="3" placeholder="One per line or comma separated" class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"><%= (project.features || []).join('\n') %></textarea>
        <p class="text-xs text-gray-500 mt-1">Tip: You can paste a comma separated list or write one per line.</p>
      </div>
      <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <label class="block text-sm font-medium text-gray-700">Technologies</label>
        <textarea name="technologies" rows="3" placeholder="React, Node.js, MongoDB or one per line" class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"><%= (project.technologies || []).join('\n') %></textarea>
      </div>
      <div class="opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <label class="block text-sm font-medium text-gray-700">Tags (comma separated)</label>
        <input name="tags" class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" value="<%= (project.tags || []).join(', ') %>" />
      </div>
      <div class="flex items-center gap-2 opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <input id="featured" name="featured" type="checkbox" <%= project.featured ? 'checked' : '' %> />
        <label for="featured" class="text-sm text-gray-700">Featured</label>
      </div>

      <div class="pt-2 opacity-0 translate-y-2 transition-all duration-300" data-animate>
        <button type="submit" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded-md text-sm hover:bg-indigo-700">
          <i data-lucide="save" class="w-4 h-4"></i>
          <%= mode === 'edit' ? 'Update' : 'Create' %>
        </button>
        <a href="/projects" class="inline-flex items-center gap-2 border px-4 py-2 rounded-md text-sm hover:bg-gray-50 ml-2">Cancel</a>
      </div>
    </form>
  </div>

  <script>
    // Staggered reveal animation
    (function(){
      const els = document.querySelectorAll('#projectForm [data-animate]');
      els.forEach((el, i) => {
        el.style.transitionDelay = (i * 40) + 'ms';
        requestAnimationFrame(() => {
          el.classList.remove('opacity-0');
          el.classList.remove('translate-y-2');
        });
      });
    })();
    // Live image preview for URL and file
    (function(){
      const urlInput = document.getElementById('imageUrlInput');
      const fileInput = document.getElementById('imageInput');
      const img = document.getElementById('previewImg');
      function show(src){
        if (!img) return;
        if (src) { img.src = src; img.classList.remove('hidden'); }
      }
      if (urlInput) urlInput.addEventListener('input', (e)=> show(e.target.value));
      if (fileInput) fileInput.addEventListener('change', (e)=>{
        const f = e.target.files && e.target.files[0];
        if (f) {
          const reader = new FileReader();
          reader.onload = (ev)=> show(ev.target.result);
          reader.readAsDataURL(f);
        }
      });
    })();
  </script>
</section>
