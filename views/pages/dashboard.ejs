<section class="py-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold flex items-center gap-2">
      <i data-lucide="layout-dashboard" class="w-6 h-6 text-indigo-600"></i>
      Welcome to <%= appName %>
    </h1>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <i data-lucide="briefcase" class="w-4 h-4"></i>
        Projects
      </div>
      <p class="text-3xl font-semibold mt-2"><%= (stats && stats.projects) || 0 %></p>
    </div>
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <i data-lucide="sparkles" class="w-4 h-4"></i>
        Skills
      </div>
      <p class="text-3xl font-semibold mt-2"><%= (stats && stats.skills) || 0 %></p>
    </div>
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <i data-lucide="hammer" class="w-4 h-4"></i>
        Tools
      </div>
      <p class="text-3xl font-semibold mt-2"><%= (stats && stats.tools) || 0 %></p>
    </div>
    <div class="bg-white border border-gray-200 rounded-lg p-4">
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <i data-lucide="mail" class="w-4 h-4"></i>
        Contacts
      </div>
      <p class="text-3xl font-semibold mt-2"><%= (stats && stats.contacts) || 0 %></p>
    </div>
  </div>
</section>
