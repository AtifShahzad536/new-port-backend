<section class="py-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold flex items-center gap-2">
        <i data-lucide="layout-dashboard" class="w-7 h-7 text-indigo-600"></i>
        <span>Welcome to <%= appName %></span>
      </h1>
      <p class="text-sm text-gray-500 mt-1">Manage your portfolio content with a clean, modern dashboard.</p>
    </div>
    <div class="hidden md:flex items-center gap-2">
      <a href="/projects/new" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-3 py-2 rounded-md text-sm hover:bg-indigo-700 shadow-sm">
        <i data-lucide="plus" class="w-4 h-4"></i>
        New Project
      </a>
      <a href="/contacts" class="inline-flex items-center gap-2 border px-3 py-2 rounded-md text-sm hover:bg-gray-50">
        <i data-lucide="mail" class="w-4 h-4"></i>
        View Messages
      </a>
    </div>
  </div>

  <!-- KPI Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-6">
    <div class="relative overflow-hidden rounded-xl border border-gray-200 bg-white p-5 hover:shadow-md transition">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-xs uppercase tracking-wide text-gray-500">Projects</p>
          <p class="mt-1 text-3xl font-semibold"><%= (stats && stats.projects) || 0 %></p>
        </div>
        <div class="p-2 rounded-md bg-indigo-50 text-indigo-600">
          <i data-lucide="briefcase" class="w-5 h-5"></i>
        </div>
      </div>
      <div class="mt-3 flex items-center gap-2 text-xs text-gray-500">
        <span class="inline-flex items-center gap-1 text-green-600"><i data-lucide="trending-up" class="w-3 h-3"></i> healthy</span>
        <span>â€¢</span>
        <a href="/projects" class="text-indigo-600 hover:underline">Manage</a>
      </div>
    </div>
    <div class="relative overflow-hidden rounded-xl border border-gray-200 bg-white p-5 hover:shadow-md transition">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-xs uppercase tracking-wide text-gray-500">Skills</p>
          <p class="mt-1 text-3xl font-semibold"><%= (stats && stats.skills) || 0 %></p>
        </div>
        <div class="p-2 rounded-md bg-emerald-50 text-emerald-600">
          <i data-lucide="sparkles" class="w-5 h-5"></i>
        </div>
      </div>
      <div class="mt-3 flex items-center gap-2 text-xs text-gray-500">
        <a href="/skills" class="text-indigo-600 hover:underline">Manage</a>
      </div>
    </div>
    <div class="relative overflow-hidden rounded-xl border border-gray-200 bg-white p-5 hover:shadow-md transition">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-xs uppercase tracking-wide text-gray-500">Tools</p>
          <p class="mt-1 text-3xl font-semibold"><%= (stats && stats.tools) || 0 %></p>
        </div>
        <div class="p-2 rounded-md bg-amber-50 text-amber-600">
          <i data-lucide="hammer" class="w-5 h-5"></i>
        </div>
      </div>
      <div class="mt-3 flex items-center gap-2 text-xs text-gray-500">
        <a href="/tools" class="text-indigo-600 hover:underline">Manage</a>
      </div>
    </div>
    <div class="relative overflow-hidden rounded-xl border border-gray-200 bg-white p-5 hover:shadow-md transition">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-xs uppercase tracking-wide text-gray-500">Contacts</p>
          <p class="mt-1 text-3xl font-semibold"><%= (stats && stats.contacts) || 0 %></p>
        </div>
        <div class="p-2 rounded-md bg-rose-50 text-rose-600">
          <i data-lucide="mail" class="w-5 h-5"></i>
        </div>
      </div>
      <div class="mt-3 flex items-center gap-2 text-xs text-gray-500">
        <a href="/contacts" class="text-indigo-600 hover:underline">View</a>
      </div>
    </div>
  </div>

  <!-- Quick Actions & Tips -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 mt-6">
    <div class="lg:col-span-2 bg-white border border-gray-200 rounded-xl p-5">
      <div class="flex items-center justify-between mb-3">
        <h2 class="text-lg font-semibold flex items-center gap-2">
          <i data-lucide="bolt" class="w-5 h-5 text-indigo-600"></i>
          Quick actions
        </h2>
      </div>
      <div class="grid sm:grid-cols-2 xl:grid-cols-3 gap-3">
        <a href="/projects/new" class="group border rounded-lg p-4 hover:bg-gray-50 transition flex items-start gap-3">
          <div class="p-2 rounded-md bg-indigo-50 text-indigo-600"><i data-lucide="plus" class="w-4 h-4"></i></div>
          <div>
            <div class="font-medium">Add project</div>
            <div class="text-xs text-gray-500">Create a new portfolio item</div>
          </div>
        </a>
        <a href="/skills" class="group border rounded-lg p-4 hover:bg-gray-50 transition flex items-start gap-3">
          <div class="p-2 rounded-md bg-emerald-50 text-emerald-600"><i data-lucide="sparkles" class="w-4 h-4"></i></div>
          <div>
            <div class="font-medium">Manage skills</div>
            <div class="text-xs text-gray-500">Add or update skill set</div>
          </div>
        </a>
        <a href="/tools" class="group border rounded-lg p-4 hover:bg-gray-50 transition flex items-start gap-3">
          <div class="p-2 rounded-md bg-amber-50 text-amber-600"><i data-lucide="hammer" class="w-4 h-4"></i></div>
          <div>
            <div class="font-medium">Manage tools</div>
            <div class="text-xs text-gray-500">Update tooling & tech</div>
          </div>
        </a>
      </div>
    </div>
    <div class="bg-white border border-gray-200 rounded-xl p-5">
      <h2 class="text-lg font-semibold mb-3 flex items-center gap-2">
        <i data-lucide="info" class="w-5 h-5 text-indigo-600"></i>
        Tips
      </h2>
      <ul class="text-sm text-gray-600 space-y-2 list-disc list-inside">
        <li>Upload optimized images for faster load time.</li>
        <li>Use clear tags to improve filtering on frontend.</li>
        <li>Keep features concise and value-focused.</li>
      </ul>
    </div>
  </div>
</section>
